<main id="main">

  <!-- ======= Blog Section ======= -->
  <section id="blog" class="blog">
    <div class="container" data-aos="fade-up">

      <div class="row gy-4 posts-list">
        {{#each story as |row index| }}

        <div class="col-xl-4 col-md-6">
          <article>
            {{!-- Author --}}
            <div class="d-flex align-items-center">
              {{!-- Circle image of poster--}}
              <img src="{{user.image}}" alt=" image of {{user.image}}" class="img-fluid post-author-img flex-shrink-0">
              <div class="post-meta">
                {{!-- firstName --}}
                <a style="text-decoration: none; width:100px; height:15px;  background-color:#f2ebeb; border-radius:20px; padding-top:6px; padding-bottom:8px; padding-left:20px; padding-right:20px;"
                  href="mailto: {{user.email}}" class="chip-link">
                  <p class="post-author-list">{{user.firstName}}</p>
                </a>
                {{!-- Posted Date --}}
                <p class="post-date">
                  <time datetime="2022-01-01"> {{formatDate story.createdAt 'MMMM Do YYYY, h:mm:ss
                    a'}}</time>
                </p>
              </div>
            </div>
            {{!-- title --}}
            <p class="post-category">{{title}}</p>
            {{!-- Body --}}
            <h2 class="title">
              <a href="blog-details.html">
                <p>{{stripTags (truncate body 250)}}</p>
              </a>
            </h2>
            {{!-- image --}}
            <div class="post-img">
              {{!-- <img src='data:{{contentType}};base64,{{imageBase64}}' width="auto" height="400"
                class="story image"> --}}

              <img src="data:{{contentType}};base64,{{imageBase64}}" alt="story image" class="img-fluid">
            </div>
          </article>
          <div class="card-footer text-center">
            <a href="/story/{{row._id}}" class="btn btn-secondary">Read More</a>
          </div>
        </div>
        <!-- End post list item -->


      </div><!-- End blog posts list -->

    </div>
  </section>
  <!-- End Blog Section -->

</main><!-- End #main -->